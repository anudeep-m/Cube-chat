{
  "name": "cube-chat",
  "version": "1.0.0",
  "description": "A Messaging App",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "socket": "npm start --prefix socket",
    "client": "npm start --prefix frontend && npm run build --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run socket\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend && npm start --prefix socket"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anudeep-m/cube-chat.git"
  },
  "keywords": [
    "Cube",
    "Chat"
  ],
  "author": "Anudeep Muktinutalapati",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anudeep-m/cube-chat/issues"
  },
  "homepage": "https://github.com/anudeep-m/cube-chat#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.27.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.5"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "nodemon": "^2.0.12"
  }
}
